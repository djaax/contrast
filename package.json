{
  "name": "@smockle/contrast",
  "version": "4.0.7",
  "description": "Analyse luminosity contrast ratio",
  "files": [
    "dist"
  ],
  "main": "dist/lib/index",
  "types": "dist/lib/index.d.ts",
  "bin": {
    "contrast": "dist/bin/index.js"
  },
  "scripts": {
    "build": "bash scripts/build.sh",
    "build:windows": "call scripts/build.bat",
    "start": "node -r @std/esm dist/bin/index.mjs",
    "debug": "node --nolazy --inspect-brk=5858 -r @std/esm dist/bin/index.mjs",
    "test": "node -r @std/esm test/index.mjs | colortape",
    "coverage": "nyc --require @std/esm --extension .mjs --reporter=lcov node test/index.mjs | colortape",
    "postcoverage": "nyc report",
    "prepublishOnly": "npm test",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smockle/contrast.git"
  },
  "author": "Clay Miller <clay@smockle.com> (https://smockle.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/smockle/contrast/issues"
  },
  "homepage": "https://github.com/smockle/contrast#readme",
  "devDependencies": {
    "@types/node": "^9.4.7",
    "codecov": "^3.0.0",
    "colortape": "^0.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "nyc": "^11.0.2",
    "prettier": "^1.11.1",
    "typescript": "^2.8.0-rc"
  },
  "lint-staged": {
    "*.{js,mjs,ts}": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "@std/esm": {
    "cjs": true
  },
  "dependencies": {
    "@std/esm": "^0.25.0"
  }
}
